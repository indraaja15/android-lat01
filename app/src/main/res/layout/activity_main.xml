<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btVita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="VITA"
        app:layout_constraintStart_toStartOf="@+id/btSari"
        app:layout_constraintTop_toBottomOf="@+id/btSari"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btSari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SARI"
        app:layout_constraintStart_toStartOf="@+id/btAndi"
        app:layout_constraintTop_toBottomOf="@+id/btAndi"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btAndi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="ANDI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btJunai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="28dp"
        android:text="JUNAI"
        app:layout_constraintEnd_toStartOf="@+id/btVita"
        app:layout_constraintTop_toTopOf="@+id/btSari"
        tools:ignore="HardcodedText" />

</android.support.constraint.ConstraintLayout>